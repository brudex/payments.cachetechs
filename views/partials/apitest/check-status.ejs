<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>
                2. Check Transaction Status
            </h5>
            <span class="badge bg-success">GET /transaction/status/:trxId</span>
        </div>
    </div>
    <div class="card-body">
        <p class="text-muted mb-4">Query the status of a transaction using its Transaction ID.</p>

        <div class="code-examples">

            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                  <a class="nav-link active" data-bs-toggle="tab" href="#status-curl">cURL</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#status-javascript">JavaScript</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#status-python">Python</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#status-php">PHP</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#status-java">Java</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#status-csharp">C#</a>
              </li>
          </ul>




            <div class="tab-content mt-3">
              <div class="tab-pane fade show active" id="status-curl">
                <%- include('./code-examples/curl-status', { app }) %>
              </div>
              <div class="tab-pane fade" id="status-javascript">
                  <%- include('./code-examples/javascript-status', { app }) %>
              </div>
              <div class="tab-pane fade" id="status-python">
                  <%- include('./code-examples/python-status', { app }) %>
              </div>
              <div class="tab-pane fade" id="status-php">
                  <%- include('./code-examples/php-status', { app }) %>
              </div>
              <div class="tab-pane fade" id="status-java">
                  <%- include('./code-examples/java-status', { app }) %>
              </div>
              <div class="tab-pane fade" id="status-csharp">
                  <%- include('./code-examples/csharp-status', { app }) %>
              </div>
            </div>
        </div>
    </div>
</div>
