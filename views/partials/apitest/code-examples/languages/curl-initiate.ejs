    -H "Content-Type: application/json" \
    -d '{
    "amount": 100.00,
    "currency": "GHS",
    "paymentMode": "card",
    "description": "Test payment",
    "customerEmail": "customer@example.com",
    "customerName": "John Doe",
    "orderId": "ORDER123"
}'</code></pre>
