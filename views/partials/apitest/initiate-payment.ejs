                  <a class="nav-link" data-bs-toggle="tab" href="#initiate-python">Python</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#initiate-php">PHP</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#initiate-java">Java</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#initiate-csharp">C#</a>
              </li>
          </ul>
            <div class="tab-content mt-3">
               <div class="tab-pane fade show active" id="initiate-curl">
                    <div class="overflow-auto">
                        <%- include('./code-examples/curl-initiate', { app }) %>
                    </div>
                </div>
                <div class="tab-pane fade" id="initiate-javascript">
                    <%- include('./code-examples/javascript-initiate', { app }) %>
                </div>
                <div class="tab-pane fade" id="initiate-python">
                    <%- include('./code-examples/python-initiate', { app }) %>
