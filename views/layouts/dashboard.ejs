<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Dashboard</title>
    <!-- Core Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Clipboard.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
    <!-- Dashboard Styles -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dashboard/dashboard.css">
     <link rel="stylesheet" href="/css/dashboard/metrics.css">
    <link rel="stylesheet" href="/css/dashboard/sidebar.css">
    <link rel="stylesheet" href="/css/dashboard/topbar.css">
    <link rel="stylesheet" href="/css/profile/password-modal.css">

    <%- style %>
</head>
<body class="dashboard-body">
    <div class="dashboard-container">
        <%- include('../partials/dashboard/sidebar') %>
        <div class="main-content">
            <%- include('../partials/dashboard/topbar') %>
            <div class="content-wrapper">
                <%- body %>
            </div>
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>

    <!-- Utils -->
    <script src="/js/utils/clipboard.js"></script>

    <!-- Components -->
    <script src="/js/dashboard/sidebar.js"></script>

    <!-- Initialize Dashboard -->
    <script src="/js/dashboard/init.js"></script>

    <%- script %>
</body>
</html>