<div class="container-fluid">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <h1 class="page-title">Dashboard Overview</h1>
    </div>

    <!-- Metrics Grid -->
    <div class="dashboard-grid">
        <!-- Total Transactions -->
        <div class="metric-card">
            <div class="metric-header">
                <span class="metric-title">Total Transactions</span>
                <div class="metric-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
            </div>
            <div class="metric-value-container">
                <div class="metric-value" id="totalTransactions">50</div>
                <div class="metric-trend">
                    <i class="fas fa-arrow-up trend-up"></i>
                    <span>12%</span>
                </div>
            </div>
            <div class="metric-chart">
                <canvas id="transactionsChart"></canvas>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="metric-card">
            <div class="metric-header">
                <span class="metric-title">Total Revenue</span>
                <div class="metric-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            <div class="metric-value-container">
                <div class="metric-value" id="totalRevenue">$220</div>
                <div class="metric-trend">
                    <i class="fas fa-arrow-up trend-up"></i>
                    <span>8.5%</span>
                </div>
            </div>
            <div class="metric-chart">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <!-- Active Apps -->
        <div class="metric-card">
            <div class="metric-header">
                <span class="metric-title">Active Apps</span>
                <div class="metric-icon">
                    <i class="fas fa-cube"></i>
                </div>
            </div>
            <div class="metric-value-container">
                <div class="metric-value" id="activeApps">220</div>
                <div class="metric-trend">
                    <i class="fas fa-minus"></i>
                    <span>0%</span>
                </div>
            </div>
            <div class="metric-chart">
                <canvas id="appsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Transactions -->
    <div class="transactions-card">
        <div class="transactions-header">
            <h2 class="transactions-title">Recent Transactions</h2>
            <a href="/dashboard/transactions" class="view-all-btn">
                View All
                <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="table-responsive">
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Amount</th>
                        <th>Payment Mode</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="transactionsTableBody">
                    <!-- Transactions will be loaded dynamically -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/dashboard.js"></script>
<script src="/js/dashboard/metrics-bundle.js"></script>