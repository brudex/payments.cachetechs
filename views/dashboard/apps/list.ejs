<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">My Applications</h1>
                <div class="d-flex gap-3">
                    <input type="text" id="appSearch" class="form-control" placeholder="Search applications...">
                    <a href="/dashboard/apps/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New App
                    </a>
                </div>
            </div>

            <% if (messages.success) { %>
                <div class="alert alert-success" role="alert">
                    <%= messages.success %>
                </div>
            <% } %>

            <div class="row">
                <% if (apps && apps.length > 0) { %>
                    <% apps.forEach(function(app) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 app-card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="app-name mb-0"><%= app.appName %></h5>
                                    <span class="badge <%= app.isActive ? 'bg-success' : 'bg-danger' %>">
                                        <%= app.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <small class="text-muted">Payment Modes:</small>
                                        <div class="mt-1 d-flex gap-1">
                                            <% app.paymentModes.forEach(function(mode) { %>
                                                <span class="badge bg-primary" data-bs-toggle="tooltip" title="<%= mode === 'card' ? 'Credit/Debit Cards' : mode === 'wallet' ? 'Mobile Money' : 'Cryptocurrency' %>">
                                                    <%= mode %>
                                                </span>
                                            <% }); %>
                                            <i class="fas fa-question-circle ms-2" data-bs-toggle="tooltip" title="These are the payment methods your application can accept"></i>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between mt-3">
                                        <button class="btn btn-outline-primary show-credentials-btn" data-app-id="<%= app.uuid %>">
                                            <i class="fas fa-key"></i> Show Credentials
                                        </button>
                                        <a href="/dashboard/apps/<%= app.uuid %>/test" class="btn btn-outline-secondary">
                                            <i class="fas fa-cog"></i> Test API
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-cube fa-3x text-muted mb-3"></i>
                            <h4>No Applications Yet</h4>
                            <p class="text-muted">Create your first application to get started</p>
                            <a href="/dashboard/apps/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create New App
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Credentials Modal -->
<div class="modal fade" id="credentialsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">API Credentials - <span id="credentialsAppName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">App ID</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="appIdValue" readonly>
                        <button class="btn btn-outline-secondary copy-btn" data-clipboard-target="#appIdValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">API Key</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="apiKeyValue" readonly>
                        <button class="btn btn-outline-secondary copy-btn" data-clipboard-target="#apiKeyValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">App Secret</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="appSecretValue" readonly>
                        <button class="btn btn-outline-secondary copy-btn" data-clipboard-target="#appSecretValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    Keep your credentials secure. Do not share them with unauthorized users.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="regenerateCredentials">
                    <i class="fas fa-sync"></i> Regenerate Credentials
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Include ClipboardJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
<script src="/js/dashboard/app-list.js"></script>