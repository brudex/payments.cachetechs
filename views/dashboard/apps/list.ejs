<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title h3 fw-bold">My Applications</h1>
                <div class="d-flex gap-3">
                    <div class="search-wrapper">
                        <i class="fas fa-search text-muted position-absolute ps-3" style="top: 50%; transform: translateY(-50%);"></i>
                        <input type="text" id="appSearch" class="form-control ps-5" placeholder="Search applications..." style="min-width: 250px;">
                    </div>
                    <a href="/dashboard/apps/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New App
                    </a>
                </div>
            </div>

            <% if (messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <div class="row">
                <% if (apps && apps.length > 0) { %>
                    <% apps.forEach(function(app) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 app-card border-0 shadow-sm">
                                <!-- Card Header with Status -->
                                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="app-icon-wrapper me-3">
                                            <div class="app-icon rounded-circle bg-primary bg-opacity-10 p-3">
                                                <i class="fas fa-cube fa-lg text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="app-name mb-2 fw-bold text-dark"><%= app.appName %></h5>
                                            <div class="status-badge">
                                                <span class="badge rounded-pill <%= app.isActive ? 'bg-success-subtle text-success' : 'bg-danger-subtle text-danger' %> px-3 py-2">
                                                    <i class="fas fa-circle fs-xs me-1"></i>
                                                    <%= app.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Card Body -->
                                <div class="card-body px-4 pt-3">
                                    <!-- Payment Modes -->
                                    <div class="mb-4">
                                        <label class="text-muted small mb-2 d-block">Payment Methods</label>
                                        <div class="d-flex gap-2 flex-wrap">
                                            <% app.paymentModes.forEach(function(mode) { %>
                                                <span class="payment-mode-badge" 
                                                      data-bs-toggle="tooltip" 
                                                      title="<%= mode === 'card' ? 'Credit/Debit Cards' : mode === 'wallet' ? 'Mobile Money' : 'Cryptocurrency' %>">
                                                    <i class="fas <%= mode === 'card' ? 'fa-credit-card' : mode === 'wallet' ? 'fa-wallet' : 'fa-coins' %> me-1"></i>
                                                    <%= mode %>
                                                </span>
                                            <% }); %>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-2 mt-auto">
                                        <button class="btn btn-primary flex-grow-1 show-credentials-btn" data-app-id="<%= app.uuid %>">
                                            <i class="fas fa-key me-2"></i> Show Credentials
                                        </button>
                                        <a href="/dashboard/apps/<%= app.uuid %>/test" 
                                           class="btn btn-light border-primary text-primary flex-grow-1">
                                            <i class="fas fa-code me-2"></i> Test API
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="text-center py-5">
                            <div class="empty-state-icon mb-4">
                                <i class="fas fa-cube fa-3x text-primary opacity-50"></i>
                            </div>
                            <h4 class="fw-bold">No Applications Yet</h4>
                            <p class="text-muted mb-4">Create your first application to get started with payments</p>
                            <a href="/dashboard/apps/create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i> Create New App
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Credentials Modal -->
<div class="modal fade" id="credentialsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-key text-primary me-2"></i>
                    API Credentials - <span id="credentialsAppName"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-4">
                    <label class="form-label small text-muted">App ID</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-light" id="appIdValue" readonly>
                        <button class="btn btn-outline-primary copy-btn" data-clipboard-target="#appIdValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label small text-muted">API Key</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-light" id="apiKeyValue" readonly>
                        <button class="btn btn-outline-primary copy-btn" data-clipboard-target="#apiKeyValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label small text-muted">App Secret</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-light" id="appSecretValue" readonly>
                        <button class="btn btn-outline-primary copy-btn" data-clipboard-target="#appSecretValue">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                <div class="alert alert-warning d-flex align-items-center mb-0">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <small>Keep your credentials secure. Never share them with unauthorized users.</small>
                </div>
            </div>
            <div class="modal-footer border-top">
                <button type="button" class="btn btn-danger" id="regenerateCredentials">
                    <i class="fas fa-sync me-2"></i> Regenerate Credentials
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
/* Card Styles */
.app-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 12px;
    overflow: hidden;
}

.app-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.12) !important;
}

.app-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Payment Mode Badges */
.payment-mode-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    background: var(--bs-primary-bg-subtle);
    color: var(--bs-primary);
    border: 1px solid var(--bs-primary-border-subtle);
}

/* Search Input */
.search-wrapper {
    position: relative;
}

/* Empty State */
.empty-state-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bs-primary-bg-subtle);
    border-radius: 50%;
}

/* Utility Classes */
.fs-xs {
    font-size: 0.75rem;
}
</style>

<!-- Include ClipboardJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
<script src="/js/dashboard/app-list.js"></script>